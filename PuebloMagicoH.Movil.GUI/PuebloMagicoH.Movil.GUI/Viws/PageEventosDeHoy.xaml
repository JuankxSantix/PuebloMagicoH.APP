<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuebloMagicoH.Movil.GUI.Viws.PageEventosDeHoy" Title="Eventos de hoy">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>-->

                <Label Grid.Row="0" FontSize="Subtitle" x:Name="lblFecha" Style="{StaticResource TextNormal}" HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="Center" ></Label> <!--"{Binding Date, StringFormat='dd:mm:yy'}"-->

                <Frame BorderColor="Black" Margin="10,5" Grid.Row="1">

                    <CollectionView Grid.Row="1" x:Name="CollectionDeEventos" ItemsSource="{Binding Eventos}" >
                        
